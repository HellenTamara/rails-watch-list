<div class="header">
  <h1>MovieMix</h1>
  <h3>Craft Your Cinematic Universe</h3>
</div>

<div class="container text-align-center mt-5 mb-5">
  <h3>Lists</h3>
  <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path("movie.jpg") %>)">
          <p><%= link_to list.name, list_path(list), class: "text-decoration-none text-white" %></p>
        </div>
    <% end %>
  </div>
</div>
