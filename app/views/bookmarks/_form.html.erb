<div class="container">
  <h3>Add a movie to the list</h3>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: @movies, include_blank: false %>
    <%= f.input :comment %>
    <%= f.submit "Add movie" %>
  <% end %>
</div>


